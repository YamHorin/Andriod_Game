<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/playerItemFragment_CV_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/playerItem_Vertical"
        android:layout_marginStart="@dimen/space_from_right_player_Item"
        android:layout_marginEnd="@dimen/space_from_left_player_Item"
        android:elevation="8dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/space_RL"
        android:layout_marginEnd="@dimen/space_RL"
        android:layout_marginBottom="@dimen/space_RL"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/playerItemFragment_MTV_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="@string/player"
            android:textSize="@dimen/text_size_player"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/playerItemFragment_MTV_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/playerItemFragment_MTV_name"
            android:layout_marginStart="@dimen/space_RL"
            android:layout_marginEnd="@dimen/space_RL"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/space_RL"
            android:text="@string/scoreNUll"
            android:textSize="@dimen/text_size_player"
            android:textStyle="bold" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
